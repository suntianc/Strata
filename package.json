{
  "name": "strata-os",
  "productName": "Strata OS",
  "description": "Intelligent Research Management and Note-taking Application",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "main": "out/main/index.js",
  "scripts": {
    "dev": "vite",
    "dev:electron": "cross-env VITE_ELECTRON=true concurrently \"vite\" \"wait-on http://localhost:3000 && electron .\"",
    "build": "tsc && vite build",
    "build:electron": "cross-env VITE_ELECTRON=true tsc -p tsconfig.electron.json && vite build && electron-builder",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit",
    "dev:electron2": "electron-vite dev",
    "build:electron2": "electron-vite build"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@electric-sql/pglite": "^0.2.17",
    "@google/genai": "^1.32.0",
    "@google/generative-ai": "^0.1.3",
    "@lancedb/lancedb": "^0.4.20",
    "@langchain/community": "^0.0.10",
    "@xenova/transformers": "^2.17.2",
    "apache-arrow": "^21.1.0",
    "better-sqlite3": "^9.6.0",
    "dotenv": "^17.2.3",
    "fs-extra": "^11.2.0",
    "kuzu": "^0.0.10",
    "langchain": "^0.1.0",
    "llamaindex": "^0.1.0",
    "lucide-react": "^0.559.0",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.14.0",
    "@types/uuid": "^9.0.8",
    "@vitejs/plugin-react": "^5.0.0",
    "concurrently": "^8.2.2",
    "cross-env": "^10.1.0",
    "electron": "^30.5.1",
    "electron-builder": "^24.13.3",
    "electron-vite": "^5.0.0",
    "typescript": "~5.8.2",
    "vite": "^6.2.0",
    "vite-plugin-electron": "^0.28.8",
    "vite-plugin-electron-renderer": "^0.14.6",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.strata.app",
    "productName": "Strata OS",
    "directories": {
      "output": "release/${version}"
    },
    "files": [
      "out/**/*",
      "node_modules/better-sqlite3/**/*",
      "package.json"
    ],
    "asarUnpack": [
      "node_modules/better-sqlite3/**/*"
    ],
    "mac": {
      "target": [
        "dmg"
      ]
    },
    "win": {
      "target": [
        "portable"
      ],
      "artifactName": "${productName}-${version}-${os}-${arch}.${ext}"
    },
    "linux": {
      "target": [
        "dir"
      ]
    },
    "npmRebuild": false,
    "buildDependenciesFromSource": false,
    "nodeGypRebuild": false
  }
}
